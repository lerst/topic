<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ppv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context="${relativePackage}.${activityClass}" >

    <SurfaceView
        android:id="@+id/previewsurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<ImageView
    android:id="@+id/draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name" />

<ImageView
    android:id="@+id/up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:background="@color/red"
    android:contentDescription="@string/app_name"
    android:visibility="visible" />

<ImageView
    android:id="@+id/monster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:background="@color/white"
    android:contentDescription="@string/app_name" />

<ImageButton
    android:id="@+id/escape"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/run" />

<TextView
    android:id="@+id/hp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/imageView1"
    android:text="@string/hp"
    android:textSize="15sp" />

<TextView
    android:id="@+id/mp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="20dp"
    android:text="@string/mp"
    android:textSize="15sp" />

<ImageButton
    android:id="@+id/weapon0"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignTop="@+id/imageView1"
    android:layout_centerHorizontal="true"
    android:background="@color/black"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/padlock" />

<ImageButton
    android:id="@+id/item0"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignTop="@+id/skill0"
    android:layout_toRightOf="@+id/skill0"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/padlock" />

<ImageButton
    android:id="@+id/skill0"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignTop="@+id/imageView1"
    android:layout_toRightOf="@+id/weapon0"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:src="@drawable/padlock" />

<ImageButton
    android:id="@+id/weapon1"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/imageView1"
    android:layout_toLeftOf="@+id/skill0"
    android:layout_toStartOf="@+id/weapon0"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/weapon2"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/weapon1"
    android:layout_toLeftOf="@+id/skill0"
    android:layout_toStartOf="@+id/weapon1"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/weapon3"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/weapon2"
    android:layout_toLeftOf="@+id/skill0"
    android:layout_toStartOf="@+id/weapon2"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<TextView
    android:id="@+id/hpvalue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/hp"
    android:layout_alignBottom="@+id/hp"
    android:layout_marginLeft="16dp"
    android:layout_toRightOf="@+id/mp"
    android:text="" />

<TextView
    android:id="@+id/mpvalue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/mp"
    android:layout_alignBottom="@+id/mp"
    android:layout_alignLeft="@+id/hpvalue"
    android:text="" />

<ImageButton
    android:id="@+id/skill2"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/skill1"
    android:layout_toLeftOf="@+id/item0"
    android:layout_toStartOf="@+id/skill1"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/skill3"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/skill2"
    android:layout_toLeftOf="@+id/item0"
    android:layout_toStartOf="@+id/skill2"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY" 
    android:visibility="invisible"/>

<ImageButton
    android:id="@+id/item2"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/item1"
    android:layout_toRightOf="@+id/skill1"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/item3"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/item2"
    android:layout_toRightOf="@+id/skill2"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/skill1"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/imageView1"
    android:layout_toLeftOf="@+id/item0"
    android:layout_toStartOf="@+id/skill0"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

<ImageButton
    android:id="@+id/item1"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_above="@+id/imageView1"
    android:layout_toRightOf="@+id/skill0"
    android:background="#00000000"
    android:contentDescription="@string/app_name"
    android:scaleType="fitXY"
    android:visibility="invisible" />

</RelativeLayout>